graph g {
    top [label="<?, ?>"];

    q0 [label="<?, 0>"];
    q1 [label="<?, 1>"];
    _0q [label="<0, ?>"];
    _1q [label="<1, ?>"];

    00 [label="<0, 0>"];
    01 [label="<0, 1>"];
    10 [label="<1, 0>"];
    11 [label="<1, 1>"];

    bot [label="bottom"];

    top -- q0;
    top -- q1;
    top -- _0q;
    top -- _1q;

    q0 -- 10;
    q0 -- 00;

    q1 -- 01;
    q1 -- 11;

    _0q -- 01;
    _0q -- 00;

    _1q -- 10;
    _1q -- 11;

    00 -- bot;
    01 -- bot;
    10 -- bot;
    11 -- bot;
}
